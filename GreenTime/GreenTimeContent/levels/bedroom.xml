        <showIf>
          <state>
            <name>indoor_puzzle_1</name>
            <value>0</value>
          </state>
        </showIf>
      </Item>
      <!-- Light switch on/off -->
      <!-- Turn on-->
      <Item>
        <showIf>
          <state>
            <name>indoor_puzzle_1</name>
            <value>100</value>
